{
    "compilerOptions": {
        "jsx": "preserve",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "target": "ES2022",
        "moduleResolution": "Node10",
        "module": "CommonJS",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "outDir": "dist"
    },
    "include": ["src", "src/core/init.ts"],
    "exclude": ["node_modules"]
}